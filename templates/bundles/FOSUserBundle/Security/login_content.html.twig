    <form class="needs-validation" action="{{ path("fos_user_security_check") }}" method="post" novalidate>
        <div class="form-row align-items-center ">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="col-md-12">
                <label class="sr-only" for="validationCustomUsername">Username</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-dark text-white" id="inputGroupPrepend">{{ 'security.login.username'|trans }}</span>
                    </div>
                    <input type="text" class="form-control" id="validationCustomUsername" name="_username" placeholder="Your name or email." aria-describedby="inputGroupPrepend" required>
                    <div class="input-group-append">
                        <div class="input-group-text bg-dark text-white">{{ 'security.login.password'|trans }}</div>
                    </div>
                    <input type="password" class="form-control" name="_password" id="inlineFormInputGroupUsername" placeholder="Your password..." required>
                    <div class="input-group-append">
                        <div class="input-group-text bg-dark text-white">{{ 'security.login.remember_me'|trans }}</div>
                    </div>
                    <select id="remember_me" name="_remember_me" class="">
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                    <button type="submit" id="_submit" class="btn btn-primary input-group-append">{{ 'security.login.submit'|trans }}</button>
                </div>

            </div>

        </div>
    </form>

    <div class="col-12 p-3">
        <a class="text-warning" href="{{ path("fos_user_registration_register") }}">Registration</a>
    </div>
</div>
